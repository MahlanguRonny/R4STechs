<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h1>Our Product Catalog</h1>
<% @products.each do |product| %>
<div class="entry">
<%= image_tag(product.image_url) %>
<h3><%= product.name %></h3>
<div class="price_line">
<span class="price"><%= product.price %></span>
</div>
</div>
<% end %>
